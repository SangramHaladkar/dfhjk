<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal"
    android:padding="@dimen/app_min_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_min_margin"
        android:layout_weight="0.90"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/app_min_margin"
                android:singleLine="true"
                android:text="For :"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtLogDayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Tuesday, 28/12/2014"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/app_min_margin"
                android:singleLine="true"
                android:text="By :"
                android:textColor="@color/unselected"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtByUserDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Vincent Oro, Assistant Manager"
                android:textColor="@color/unselected"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/app_min_margin"
                android:singleLine="true"
                android:text="Last Updated :"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtLastUpdateDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="28/12/2014 01:09:23 AM"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_min_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFlagSecurityIssue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:src="@drawable/flag_grey_new" />

            <ImageView
                android:id="@+id/imgFlagEmpInjury"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:src="@drawable/flag_grey_new" />

            <ImageView
                android:id="@+id/imgFlagGuestInjury"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:src="@drawable/flag_grey_new" />

            <ImageView
                android:id="@+id/imgFlagMajorPropDamage"
                android:layout_width="30dp"
                android:padding="2dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:src="@drawable/flag_grey_new" />

            <ImageView
                android:id="@+id/imgFlagMajorEquipIssueBrkdwn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:src="@drawable/flag_grey_new" />

            <ImageView
                android:id="@+id/imgFlagOther"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:src="@drawable/flag_grey_new" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgIncompleteLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/app_min_margin"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_action_incomplete" />

</LinearLayout>