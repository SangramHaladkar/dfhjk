<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ism.manager.login.ForgotPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorAccent"
                    android:gravity="center"
                    android:padding="@dimen/app_normal_padding"
                    android:text="@string/sign_help_text"
                    android:textAllCaps="false"
                    android:textColor="@color/appBlue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtUserId"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:background="@drawable/rounded_text"
                    android:gravity="center_vertical"
                    android:hint="@string/user_id"
                    android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:padding="@dimen/app_normal_padding"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="#9a9a9a"
                    android:textSize="@dimen/app_edt_txt" />

                <EditText
                    android:id="@+id/edtCompanyName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:background="@drawable/rounded_text"
                    android:gravity="center_vertical"
                    android:hint="@string/company"
                    android:imeOptions="actionSend|actionDone|actionGo"
                    android:maxLength="15"
                    android:padding="@dimen/app_normal_padding"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="#9a9a9a"
                    android:textSize="@dimen/app_edt_txt" />

                <TextView
                    android:id="@+id/btnVerify"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/app_normal_margin"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="@dimen/app_normal_margin"
                    android:background="@drawable/rounded_button_orange"
                    android:backgroundTint="@color/appOrangeTint"
                    android:elevation="@dimen/app_min_margin"
                    android:gravity="center"
                    android:padding="@dimen/app_normal_padding"
                    android:text="@string/verify"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/questionLayout"
                android:layout_width="300dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/app_normal_margin"
                    android:layout_marginTop="@dimen/app_normal_margin"
                    android:gravity="left"
                    android:textColor="@color/appBlue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/app_normal_margin"
                    android:layout_marginTop="@dimen/app_normal_margin"
                    android:background="@drawable/rounded_text"
                    android:gravity="center_vertical"
                    android:hint="@string/answere_here"
                    android:imeOptions="actionNext"
                    android:maxLength="255"
                    android:singleLine="true"
                    android:padding="@dimen/app_normal_padding"
                    android:text=""
                    android:textColorHint="#9a9a9a"
                    android:textSize="@dimen/app_edt_txt" />

                <TextView
                    android:id="@+id/btnNextPage"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/app_normal_margin"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="@dimen/app_normal_margin"
                    android:background="@drawable/rounded_button_orange"
                    android:backgroundTint="@color/appOrangeTint"
                    android:elevation="@dimen/app_min_margin"
                    android:gravity="center"
                    android:padding="@dimen/app_normal_padding"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>