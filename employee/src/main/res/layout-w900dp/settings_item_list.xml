<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="ism.manager.ItemListActivity">

    <!--
    This layout is a two-pane layout for the Items
    master/detail flow.
    
    -->
    <FrameLayout
        android:id="@+id/settings_item_list_container"
        android:layout_width="250dp"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:divider="@color/appBackground"
                android:dividerPadding="1dp"
                android:orientation="vertical"
                android:showDividers="middle">

                <RelativeLayout
                    android:id="@+id/loginDetailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/headerbg"
                    android:padding="@dimen/app_normal_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/login_details"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="bottom"
                        android:src="@drawable/ic_arrow_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@color/appBackground"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/myInfoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/headerbg"
                        android:padding="@dimen/app_normal_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/my_info"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/contactLayout"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/app_normal_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/contact"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:gravity="bottom"
                            android:src="@drawable/ic_arrow_right" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/securityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/app_normal_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/security"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:gravity="bottom"
                            android:src="@drawable/ic_arrow_right" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/pwdLayout"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/app_normal_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/password"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:gravity="bottom"
                            android:src="@drawable/ic_arrow_right" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/appBackground"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/aboutLayout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/headerbg"
                        android:padding="@dimen/app_normal_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/about"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/appNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/app_normal_padding">

                        <ImageView
                            android:id="@+id/appImg"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="bottom"
                            android:src="@drawable/stafftap_icon_tran_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/appImg"
                            android:text="@string/stafftap_android_app"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:gravity="bottom"
                            android:src="@drawable/ic_arrow_right" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/settings_item_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

    </FrameLayout>

</LinearLayout>
