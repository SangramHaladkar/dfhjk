<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".message.MandatoryMsgDetailFragment">

    <ScrollView
        android:id="@+id/bodyScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_normal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSubjectName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_min_margin"
                    android:layout_weight="0.80"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgMessageImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_margin="@dimen/app_min_margin"
                android:background="@color/appBackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_normal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_min_margin"
                    android:text="From : "
                    android:textColor="@color/unselected"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_min_margin"
                    android:layout_weight="0.80"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtMsgDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_min_margin"
                    android:textColor="@color/unselected"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_normal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_min_margin"
                    android:text="To :"
                    android:textColor="@color/unselected"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_min_margin"
                    android:layout_weight="0.95"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:padding="@dimen/app_min_margin"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_margin="@dimen/app_min_margin"
                android:background="@color/appBackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:autoLink="web"
                    android:gravity="left"
                    android:minHeight="100dp"
                    android:padding="@dimen/app_min_padding"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <LinearLayout
                    android:id="@+id/attachmentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtAttachments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_action_attachment_dark"
                            android:gravity="center_vertical"
                            android:text="Attachments:"
                            android:textColor="@color/unselected"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/lstAttachments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/app_min_margin"
                        android:cacheColorHint="#00000000" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mandatoryMsgButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="62dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Tap When Read"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnStatus"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Status"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/app_min_padding">

        <TextView
            android:id="@+id/btnReplyMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_action_reply"
            android:gravity="center"
            android:padding="@dimen/app_min_padding"
            android:text="Reply"
            android:textColor="@color/unselected"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btnReplyAllMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_action_reply_all"
            android:gravity="center"
            android:padding="@dimen/app_min_padding"
            android:text="ReplyAll"
            android:textColor="@color/unselected"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btnForwardMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_action_forward"
            android:gravity="center"
            android:padding="@dimen/app_min_padding"
            android:text="Forward"
            android:textColor="@color/unselected"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btnDeleteMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_action_delete"
            android:gravity="center"
            android:padding="@dimen/app_min_padding"
            android:text="Delete"
            android:textColor="@color/unselected"
            android:textSize="12sp" />


    </LinearLayout>
</RelativeLayout>
