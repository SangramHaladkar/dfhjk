<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lylMandatoryMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtMMReadStatusName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#005595"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:drawableLeft="@drawable/ic_action_attachment_dark"
        android:gravity="center_vertical"
        android:text="Attachments : "
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtMMReadAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:textColor="#005595"
        android:textSize="16sp" />

</LinearLayout>