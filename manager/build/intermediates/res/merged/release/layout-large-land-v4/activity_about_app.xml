<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ism.manager.settings.AboutApp_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/app_normal_margin"
        android:layout_marginBottom="@dimen/app_normal_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_margin="@dimen/app_normal_margin"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/s_logo" />


        <TextView
            android:id="@+id/txtLoginVer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/app_min_padding"
            android:text="Version"
            android:textColor="#9a9a9a"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/app_min_padding"
            android:text="Copyright StaffTAP"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
    </LinearLayout>


</FrameLayout>


