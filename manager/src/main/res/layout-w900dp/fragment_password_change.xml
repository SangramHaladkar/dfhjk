<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="ism.manager.settings.PasswordChangeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lylDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_normal_margin"
                android:text="@string/password"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appBackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/app_normal_margin"
                android:background="@color/headerbg"
                android:orientation="vertical"
                android:padding="@dimen/app_normal_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/app_normal_margin"
                    android:layout_marginLeft="@dimen/app_min_margin"
                    android:text="@string/old_password"
                    android:textColor="@color/appOrange"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_text"
                    android:hint="@string/enter_old_password"
                    android:maxLength="15"
                    android:padding="@dimen/app_normal_padding"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/headerbg"
                android:orientation="vertical"
                android:padding="@dimen/app_normal_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/app_normal_margin"
                    android:layout_marginLeft="@dimen/app_min_margin"
                    android:text="@string/create_new_password"
                    android:textColor="@color/appOrange"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/app_normal_margin"
                    android:background="@color/selected" />

                <EditText
                    android:id="@+id/edNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/app_normal_margin"
                    android:background="@drawable/rounded_text"
                    android:hint="@string/enter_new_pwd"
                    android:maxLength="15"
                    android:padding="@dimen/app_normal_padding"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/app_normal_margin"
                    android:background="@drawable/rounded_text"
                    android:hint="@string/confirm_new_password"
                    android:maxLength="15"
                    android:padding="@dimen/app_normal_padding"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:text="@string/pwd_change_info"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="58dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--<Button-->
                <!--android:id="@+id/btnCancel"-->
                <!--android:layout_width="85dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:background="@drawable/selector_btnopen"-->
                <!--android:text="Cancel"-->
                <!--android:textColor="#ffffff"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold" />-->

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:text="Save"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
