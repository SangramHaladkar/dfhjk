<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lylProductivityList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/app_min_margin"
    android:padding="@dimen/app_min_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtFieldTitle"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.40"
            android:text=""
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDollar"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/edFieldValue"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_min_margin"
                android:layout_marginRight="@dimen/app_min_margin"
                android:background="@drawable/rounded_text"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:maxLength="250"
                android:padding="@dimen/app_normal_padding"
                android:text=""
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tblayAnnualTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtAddedByDollar"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtAddedBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Added By"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtResponse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Response"
                android:textColor="#000000"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txtOneYearAgo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="1 Year ago"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtOneYearAgoDollar"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtOneYearAgoAddedBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtOneYearAgoResponse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txtTwoYearAgo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="2 Years ago"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtTwoYearAgoDollar"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtTwoYearAgoAddedBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtTwoYearAgoResponse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>